<Window x:Class="Car_Hire_Partial.DaysForHireWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Car_Hire_Partial"
        mc:Ignorable="d"
        Title="DaysForHireWindow" Height="265" Width="554" FontSize="14">
    <Grid>
        <TextBox x:Name="daysForHireInput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Height="28" FontSize="18" Margin="0,88,0,0"/>
        <Label Content="Enter how many days to hire the vehicle" HorizontalAlignment="Center" Margin="0,54,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnReturn" Content="Return" HorizontalAlignment="Left" Margin="28,160,0,0" VerticalAlignment="Top" Height="50" Width="133" Click="btnReturn_Click"/>
        <Button x:Name="btnContinue" Content="Continue" HorizontalAlignment="Right" Margin="0,160,28,0" VerticalAlignment="Top" Height="50" Width="133" Click="btnContinue_Click"/>
    </Grid>
</Window>
