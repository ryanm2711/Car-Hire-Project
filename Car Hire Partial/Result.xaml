<Window x:Class="Car_Hire_Partial.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Car_Hire_Partial"
        mc:Ignorable="d"
        Title="Result" Height="450" Width="564">
    <Grid>
        <Label Content="Results:" HorizontalAlignment="Center" Height="61" Margin="0,10,0,0" VerticalAlignment="Top" Width="121" FontSize="30"/>
        <Button x:Name="btnBegin" Content="Continue" HorizontalAlignment="Center" Margin="0,322,0,0" VerticalAlignment="Top" Width="258" Height="66" FontSize="18" Click="btnBegin_Click"/>

        <Border BorderThickness="1" BorderBrush="Black" Height="200" Width="350" Margin="80,76,80,116">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0, 0, 0, 2">
                <ItemsControl x:Name="resultsBox"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
